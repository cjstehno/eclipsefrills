<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="net.sourceforge.eclipsefrills.markdown.editor.MarkdownEditor"
            contributorClass="net.sourceforge.eclipsefrills.markdown.editor.MarkdownMultipageEditorContributor"
            extensions="mkd"
            icon="icons/markdown_editor.gif"
            id="net.sourceforge.eclipsefrills.markdown.editor"
            name="%eclipsefrills.markdown.editor.name">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="net.sourceforge.eclipsefrills.markdown.preference.MarkdownPreferencePage"
            id="net.sourceforge.eclipsefrills.markdown.preference.MarkdownPreferencePage"
            name="%eclipsefrills.markdown.prefs.name">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="net.sourceforge.eclipsefrills.markdown.preference.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="net.sourceforge.eclipsefrills.markdown"
            name="%eclipsefrills.markdown.category.name">
      </category>
      <wizard
            category="net.sourceforge.eclipsefrills.markdown"
            class="net.sourceforge.eclipsefrills.markdown.wizard.NewMarkdownWizard"
            icon="icons/markdown_editor.gif"
            id="net.sourceforge.eclipsefrills.markdown.wizard.NewMarkdownWizard"
            name="%eclipsefrills.markdown.wizard.newfile.name">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.help.toc">
      <toc
            file="toc.xml"
            primary="true">
      </toc>
      <toc
            file="tocreference.xml">
      </toc>
      <toc
            file="toctasks.xml">
      </toc>
   </extension>
   <extension
         point="org.eclipse.ui.exportWizards">
      <category
            id="net.sourceforge.eclipsefrills.markdown.category"
            name="%eclipsefrills.markdown.category.name">
      </category>
      <wizard
            category="net.sourceforge.eclipsefrills.markdown.category"
            class="net.sourceforge.eclipsefrills.markdown.wizard.MarkdownContentExportWizard"
            icon="icons/markdown_editor.gif"
            id="eclipsefrills.markdown.wizard.export"
            name="%eclipsefrills.markdown.wizard.export.name">
      </wizard>
   </extension>

</plugin>
